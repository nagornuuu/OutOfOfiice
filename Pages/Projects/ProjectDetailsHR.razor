@page "/projects/hr/details/{id:int}"
@using OutOfOffice.Models
@using OutOfOffice.Services
@inject ProjectService ProjectService
@inject NavigationManager Navigation

<h3>Project Details</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (project == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form>
        <div class="form-group">
            <label for="ProjectType">Project Type</label>
            <input type="text" id="ProjectType" class="form-control" value="@project.ProjectType" disabled />
        </div>
        <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input type="text" id="StartDate" class="form-control" value="@project.StartDate.ToShortDateString()" disabled />
        </div>
        <div class="form-group">
            <label for="EndDate">End Date</label>
            <input type="text" id="EndDate" class="form-control" value="@project.EndDate.ToShortDateString()" disabled />
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <input type="text" id="Status" class="form-control" value="@project.Status" disabled />
        </div>
        <div class="form-group">
            <label for="Comment">Comment</label>
            <textarea id="Comment" class="form-control" @bind="project.Comment" disabled></textarea>
        </div>
        <button type="button" class="btn btn-secondary" @onclick="NavigateBack">Back to List</button>
    </form>
}

@code {
    [Parameter] public int id { get; set; }
    private Project project;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            project = await ProjectService.GetProjectAsync(id);
            if (project == null)
            {
                errorMessage = "Project not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/projects/hr");
    }
}
