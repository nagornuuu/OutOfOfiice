@page "/project-dashboard"
@inject NavigationManager Navigation

<h3>Project Manager Dashboard</h3>

<div>
    <button class="btn btn-primary mb-3" @onclick="NavigateToEmployees">Employees</button>
    <button class="btn btn-primary mb-3" @onclick="NavigateToProjects">Projects</button>
    <button class="btn btn-primary mb-3" @onclick="NavigateToLeaveRequests">Leave Requests</button>
    <button class="btn btn-primary mb-3" @onclick="NavigateToApprovalRequests">Approval Requests</button>
</div>

@code {
    private void NavigateToEmployees()
    {
        Navigation.NavigateTo("/employees/pm");
    }

    private void NavigateToProjects()
    {
        Navigation.NavigateTo("projects/pm");
    }

    private void NavigateToLeaveRequests()
    {
        Navigation.NavigateTo("/leaverequests/pm");
    }

    private void NavigateToApprovalRequests()
    {
        Navigation.NavigateTo("/approvalrequests/pm");
    }
}
