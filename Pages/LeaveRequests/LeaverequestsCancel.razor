@page "/leaverequests/cancel/{id:int}"
@using OutOfOffice.Models
@using OutOfOffice.Services
@inject LeaveRequestService LeaveRequestService
@inject NavigationManager Navigation

<h3>Cancel Leave Request</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (leaveRequest != null)
{
    <div>
        <h4>Are you sure you want to cancel this leave request?</h4>
        <dl class="row">
            <dt class="col-sm-2">Employee</dt>
            <dd class="col-sm-10">@leaveRequest.Employee.FullName</dd>
            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@leaveRequest.AbsenceReason</dd>
            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@leaveRequest.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@leaveRequest.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@leaveRequest.Status</dd>
            <dt class="col-sm-2">Comment</dt>
            <dd class="col-sm-10">@leaveRequest.Comment</dd>
        </dl>
    </div>
    <div>
        <button class="btn btn-danger" @onclick="CancelLeaveRequest">Cancel</button>
        <NavLink href="/leaverequests/employee" class="btn btn-secondary">Back to List</NavLink>
    </div>
}
else
{
    <p><em>Loading...</em></p>
}

@code {
    [Parameter] public int id { get; set; }
    private LeaveRequest leaveRequest;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadLeaveRequest();
    }

    private async Task LoadLeaveRequest()
    {
        try
        {
            leaveRequest = await LeaveRequestService.GetLeaveRequestAsync(id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading leave request: {ex.Message}";
        }
    }

    private async Task CancelLeaveRequest()
    {
        try
        {
            await LeaveRequestService.CancelLeaveRequestAsync(id);
            Navigation.NavigateTo("/leaverequests/employee");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error canceling leave request: {ex.Message}";
        }
    }
}
